<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#4CAF50"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/ErWeiMa"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/erweima"
        android:drawablePadding="1dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_search_home"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:background="@drawable/search_home_shape"
        android:drawableRight="@drawable/home_search_icon"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:text="输入搜索信息"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/SaoMa"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/saoma"
        android:drawablePadding="1dp"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:textSize="13sp" />


</LinearLayout>
